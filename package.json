{
  "name": "focus-flow-timer",
  "version": "1.0.0",
  "description": "基于神经科学的智能学习计时器",
  "type": "module",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"electron-forge start\"",
    "electron:build": "npm run build && electron-builder",
    "build-win": "npm run build && electron-builder --win",
    "build-mac": "npm run build && electron-builder --mac",
    "build-linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "timer",
    "study",
    "productivity",
    "pomodoro"
  ],
  "author": "Zhiqian Yu",
  "license": "MIT",
  "dependencies": {
    "i18next": "^25.2.0",
    "i18next-browser-languagedetector": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.5.0",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "png2icons": "^2.0.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-pwa": "^1.0.0"
  },
  "build": {
    "appId": "com.zhiqianyu.focusflow",
    "productName": "Focus Flow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/assets/icons/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZhiqianYu/Focus-Flow.git"
  },
  "bugs": {
    "url": "https://github.com/ZhiqianYu/Focus-Flow/issues"
  },
  "homepage": "https://github.com/ZhiqianYu/Focus-Flow#readme"
}
